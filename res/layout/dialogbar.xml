<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp" 
    android:background="@color/app_theme_color">
    <ImageView 
        android:id="@+id/topbar_opv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_back"
        android:scaleType="fitXY"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:background="@drawable/imgbtn_bg"/>
    <TextView 
        android:id="@+id/topbar_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/topbar_opv"
        android:layout_centerVertical="true"
        android:text="@string/app_name"/>
    
    <ImageView 
        android:id="@+id/topbar_share"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_share"
        android:scaleType="fitXY"
        android:visibility="visible"
        android:padding="3dp"
        android:layout_centerVertical="true"
        android:background="@drawable/imgbtn_bg"/>
    
    <ImageView 
        android:id="@+id/topbar_pre"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_pre"
        android:layout_toLeftOf="@id/topbar_share"
        android:scaleType="fitXY"
        android:visibility="visible"
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:background="@drawable/imgbtn_bg"
        />
    
    <ImageView 
        android:id="@+id/topbar_next"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_next"
        android:layout_toLeftOf="@id/topbar_pre"
        android:scaleType="fitXY"
        android:padding="5dp"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:background="@drawable/imgbtn_bg"/>
    

</RelativeLayout>
